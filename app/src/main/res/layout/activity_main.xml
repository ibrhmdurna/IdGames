<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="?attr/colorPrimary">

    <FrameLayout
        android:id="@+id/mainFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_bottom_view"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/main_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="?attr/colorPrimary"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/main_bottom_icon_color"
        app:itemIconSize="20dp"
        app:itemTextAppearanceInactive="@style/BottomItemInactiveTextAppearance"
        app:itemTextAppearanceActive="@style/BottomItemActiveTextAppearance"
        app:menu="@menu/main"/>

</RelativeLayout>